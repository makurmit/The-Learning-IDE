<Window x:Class="The_Learning_IDE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:The_Learning_IDE"
        mc:Ignorable="d"
        Title="The Learning IDE" Height="350" Width="525">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" x:Name="NavBarButtonGrid" Grid.Row="0">
            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0, 0, 5, 0"     
                    Click="NewFileButtonClick"  Content="New File"/>
            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0, 0, 5, 0"     
                    Content="Open File" Click="OpenFileClick"/>
            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0, 0, 5, 0"     
                    Content="Save File"/>
            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0, 0, 5, 0"     
                    Content="Lessons" />
            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0, 0, 5, 0"     
                    Content="Fundamentals" />
            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0, 0, 5, 0"     
                    Content="Glossary" />
            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0, 0, 5, 0"     
                    Content="Run" />
        </StackPanel>

        <Grid Grid.Row="1">
            <TabControl Height="20" VerticalAlignment="Top">
                <TabItem Header="TabItem">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="TabItem">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
            </TabControl>

        </Grid>

        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <TextBlock HorizontalAlignment="Left" 
                       MinHeight="200" Width="10" 
                       Background="LightGray">
            </TextBlock>

            <RichTextBox x:Name="TextField"
                MinHeight="10" 
                MinWidth="300">
            </RichTextBox>

            <Expander Header="Lesson" 
                      HorizontalAlignment="Right" VerticalAlignment="Top"
                      MinHeight="200" MaxHeight="500"
                      MinWidth="150">
                <Grid Background="#FFE5E5E5"/>
            </Expander>
        </StackPanel>

        <Expander Header="Terminal" Grid.Row="3"
                  HorizontalAlignment="Left" 
                  MinWidth="525" Height="100" VerticalAlignment="Top">
            <Grid Background="#FFE5E5E5"/>
        </Expander>
    </Grid>
</Window>

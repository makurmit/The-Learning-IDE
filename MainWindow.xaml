<Window x:Class="The_Learning_IDE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:The_Learning_IDE"
        mc:Ignorable="d"
        Background="DarkGray" Closing="Window_Closing"
        Title="The Learning IDE" Height="500" Width="600">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="140"/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" x:Name="NavBarButtonGrid" Grid.Row="0">
            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0, 0, 5, 0"     
                    Click="NewFileButtonClick"  Content="New File"/>
            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0, 0, 5, 0"     
                    Content="Open File" Click="OpenFileClick"/>
            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0, 0, 5, 0"     
                    Content="Save File" Click="SaveFileClick"/>
            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0, 0, 5, 0"     
                    Content="Lessons" Click="LessonClick"/>
            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0, 0, 5, 0"     
                    Content="Fundamentals" />
            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0, 0, 5, 0"     
                    Content="Glossary" />
            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0, 0, 5, 0"     
                    Content="Run" Click="RunClick"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <TabControl Height="20" VerticalAlignment="Bottom"
                        x:Name="TabBar" ItemsSource="{Binding}"
                        SelectionChanged="TabBar_SelectionChanged"
                        Background="DarkGray" 
                        MouseRightButtonUp="TabBar_MouseRightButtonDown">
            </TabControl>
        </Grid>
        

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock HorizontalAlignment="Left" Grid.Column="0"
                       MinHeight="200" Width="10" 
                       Background="SlateGray"
                       IsEnabled="False">
            </TextBlock>

            <RichTextBox x:Name="TextField" Grid.Column="1"
                         HorizontalAlignment="Stretch"
                         Background="DarkGray" BorderBrush="Black" BorderThickness="2"
                         MinHeight="10" MinWidth="340"
                         AcceptsTab="True" AcceptsReturn="True"
                         TextChanged="UnsavedChanges"
                         IsEnabled="False"/>

            <Expander Header="Lesson" Grid.Column="2"
                      Background="DarkGray" BorderBrush="Black" BorderThickness="1"
                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                      MinHeight="20" MinWidth="150">
                <TextBox x:Name="LessonBox" 
                         VerticalAlignment="Stretch"
                         Background="DarkGray" TextWrapping="Wrap"
                         AcceptsTab="True" AcceptsReturn="True"
                         IsReadOnly="True"/>
            </Expander>
        </Grid>

        <Expander Header="Terminal" Grid.Row="3"
                  Background="DarkGray" BorderBrush="Black" BorderThickness="2"
                  HorizontalAlignment="Stretch" VerticalAlignment="Top"
                  MinWidth="520" Height="140">
            <Grid Background="Black"/>
        </Expander>
    </Grid>
</Window>
